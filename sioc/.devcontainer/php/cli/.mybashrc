# Function to get Git branch name and status
parse_git_branch() {
    branch=$(git symbolic-ref HEAD 2> /dev/null | cut -d "/" -f 3)
    if [[ -n $branch ]]; then
        status=$(git status --porcelain 2> /dev/null)
        if [[ -n $status ]]; then
            echo "($branch*)"
        else
            echo "($branch)"
        fi
    fi
}

